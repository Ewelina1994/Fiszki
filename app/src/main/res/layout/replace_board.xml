<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23293F"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:cardPreventCornerOverlap="false"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#2C4158"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    tools:srcCompat="@drawable/def_as_" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="#CCDAE7"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/questionTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:freezesText="true"
                        android:gravity="center"
                        android:paddingVertical="5dp"
                        android:text="Nilu"
                        android:textColor="#191818"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/speakBtn"
                        android:layout_width="58dp"
                        android:layout_height="41dp"
                        android:layout_weight="20"
                        android:drawableLeft="@android:drawable/ic_media_play"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/answerTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="#CCDAE7"
                    android:freezesText="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingVertical="5dp"
                    android:text="dsfdfdf"
                    android:textColor="#191818"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/sentenceTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="#CCDAE7"
                    android:freezesText="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingVertical="5dp"
                    android:text="Sample sentence with this idom"
                    android:textColor="#191818"
                    android:textSize="30sp" />

            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
</LinearLayout>